    <%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/message.css">
</head>
<body>
    <%-include('../includes/navigation-old.ejs') %>
    <main>
        <% if(errors && errors.messages.length > 0) { %>
        <div class="user-message user-message--error">
            <% errors.messages.forEach(error => { %>
                <div><%= error %></div>
            <% }) %>
        </div>
        <% } %>
        <form action="/login" class="login-form" method="POST" novalidate>
            <div class="form-control">
                <label for="email">Email</label>
                <input class="<%= errors && errors.data && errors.data.find(item => item.param === 'email') ? 'invalid' : '' %>" type="email" name="email" id="email" value="<%= oldInputs ? oldInputs.email : '' %>" autofocus placeholder="email address">
            </div>
            <div class="form-control">
                <label for="password">Password</label>
                <input class="<%= errors && errors.data && errors.data.find(item => item.param === 'password') ? 'invalid' : '' %>" type="password" name="password" id="password" value="<%= oldInputs ? oldInputs.password : '' %>" placeholder="password (atleast 8 characters long)">
            </div>
            <button type="submit" class="btn">Login</button>
        </form>
    </main>
<%- include('../includes/end.ejs') %>
