    <%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/message.css">
    </head>
<body>
    <%- include('../includes/navigation-old.ejs') %>
    <main>
        <% if(errors && errors.messages.length > 0) { %>
        <div class="user-message user-message--error">
            <% errors.messages.forEach(error => { %>
                <div><%= error %></div>
            <% }) %>
        </div>
        <% } %>
        <form class="signup-form" action="/signup" method="POST" novalidate>
            <div class="form-control">
                <label for="name">Name</label>
                <input
                    class="<%= errors && errors.data && errors.data.find(item => item.param === 'name') ? 'invalid' : '' %>"
                    type="text"
                    name="name"
                    id="name"
                    value="<%= oldInputs ? oldInputs.name : '' %>"
                    autofocus>
            </div>
            <div class="form-control">
                <label for="email">Email</label>
                <input
                    class="<%= errors && errors.data && errors.data.find(item => item.param === 'email') ? 'invalid' : '' %>"
                    type="email"
                    name="email"
                    id="email"
                    value="<%= oldInputs ? oldInputs.email : '' %>">
            </div>
            <div class="form-control">
                <label for="password">Password</label>
                <input
                    class="<%= errors && errors.data && errors.data.find(item => item.param === 'password') ? 'invalid' : '' %>"
                    type="password"
                    name="password"
                    id="password"
                    value="<%= oldInputs ? oldInputs.password : '' %>">
            </div>
            <div class="form-control">
                <label for="confirmPassword">Confirm Password</label>
                <input
                    class="<%= errors && errors.data && errors.data.find(item => item.param === 'confirmPassword') ? 'invalid' : '' %>"
                    type="password"
                    name="confirmPassword"
                    id="confirmPassword">
            </div>
            <button type="submit" class="btn">Signup</button>
        </form>
    </main>

<%- include('../includes/end.ejs') %>
